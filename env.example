# Django Configuration
# SECURITY: Generate a new secret key for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
# For local/remote access add 0.0.0.0 and your server IP (e.g. 4.240.102.231)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,4.240.102.231

# CORS Configuration
# Set to False in production and specify allowed origins
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
# For development: use sqlite3 (default)
# For production: use postgresql
DB_ENGINE=sqlite3

# PostgreSQL Configuration (when DB_ENGINE=postgresql)
DB_NAME=theoneeye
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://127.0.0.1:6379
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Frontend API URL (for backend to frontend communication if needed)
FRONTEND_URL=http://localhost:3000

